            <datadir zip="true">https://raw.githubusercontent.com/htpcforall/digipro/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>[COLOR yellow]DigiPro[/COLOR] Repository</summary>
            <description>Download and install addons, repositories and backups.</description>

<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="digipro.repository" name=" [COLOR blue]Digipro[/COLOR] Repository" version="1.0.0" provider-name="digipro">
    <requires>
        <!--<backwards-compatibility abi="12.0"/>-->
        <import addon="xbmc.addon" version="12.0.0" />
    </requires>
    <extension point="xbmc.addon.repository" name="DigiPro Repository">

        <dir>
            <info compressed="false">https://raw.githubusercontent.com/htpcforall/digipro/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/htpcforall/digipro/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/htpcforall/digipro/master/_repo</datadir>
            <!--<hashes>true</hashes>-->
        </dir>

    </extension>

    <extension point="xbmc.addon.metadata">
        <summary> [COLOR blue]Digipro[/COLOR] Repository</summary>
        <description lang="en">Download and install addons, repositories and backups</description>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <platform>all</platform>
        <!--<platform>windx osx linux android</platform>-->
    </extension>

</addon>

<addon id="plugin.program.digiprotools" name="[COLOR blue]DigiPro[/COLOR] Tools" version="1.0.0" provider-name="DigiPro">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">DigiPro Tools</summary>
    <description lang="en">Easy Expert install plus Backup and restore.</description>
    <platform>all</platform>
  </extension>
</addon>

